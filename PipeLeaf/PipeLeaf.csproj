<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>bin\$(Configuration)\Mods\mod</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="VintagestoryAPI">
      <HintPath>$(VINTAGE_STORY)/VintagestoryAPI.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

<ItemGroup>
  <Content Include="assets\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
  </Content>
  <None Remove="assets\pipeleaf\itemtypes\briarburl.json" />
  <None Remove="assets\pipeleaf\itemtypes\smokingpipe.json" />
  <None Remove="assets\pipeleaf\itemtypes\smokingpipebowl.json" />
  <None Remove="assets\pipeleaf\patches\patch-tree-heath.json" />
  <None Remove="assets\pipeleaf\recipes\barrel\soaked-burl.json" />
  <None Remove="assets\pipeleaf\recipes\grid\smokingpipebowl.json" />
  <Content Include="modinfo.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
  </Content>
</ItemGroup>

</Project>
